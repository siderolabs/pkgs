From b7b362879f8cbbe553bb86f3ca79816182953068 Mon Sep 17 00:00:00 2001
From: Dmitry Sharshakov <dmitry.sharshakov@siderolabs.com>
Date: Thu, 30 Jan 2025 19:52:11 +0100
Subject: [PATCH] chore: musl headers compatibility for udev

Signed-off-by: Dmitry Sharshakov <dmitry.sharshakov@siderolabs.com>
---
 src/include/uapi/linux/if.h          |  2 +-
 src/include/uapi/linux/if_ether.h    |  2 +-
 src/include/uapi/linux/libc-compat.h | 10 +++++++---
 src/include/uapi/linux/netdevice.h   |  2 +-
 4 files changed, 10 insertions(+), 6 deletions(-)

diff --git a/src/include/uapi/linux/if.h b/src/include/uapi/linux/if.h
index b287b2a0bb..2639e69b52 100644
--- a/src/include/uapi/linux/if.h
+++ b/src/include/uapi/linux/if.h
@@ -129,10 +129,10 @@ enum net_device_flags {
 #define IFF_LOWER_UP			IFF_LOWER_UP
 #define IFF_DORMANT			IFF_DORMANT
 #define IFF_ECHO			IFF_ECHO
-#endif /* __UAPI_DEF_IF_NET_DEVICE_FLAGS_LOWER_UP_DORMANT_ECHO */
 
 #define IFF_VOLATILE	(IFF_LOOPBACK|IFF_POINTOPOINT|IFF_BROADCAST|IFF_ECHO|\
 		IFF_MASTER|IFF_SLAVE|IFF_RUNNING|IFF_LOWER_UP|IFF_DORMANT)
+#endif /* __UAPI_DEF_IF_NET_DEVICE_FLAGS_LOWER_UP_DORMANT_ECHO */
 
 #define IF_GET_IFACE	0x0001		/* for querying only */
 #define IF_GET_PROTO	0x0002
diff --git a/src/include/uapi/linux/if_ether.h b/src/include/uapi/linux/if_ether.h
index a1aff8e337..847532aea0 100644
--- a/src/include/uapi/linux/if_ether.h
+++ b/src/include/uapi/linux/if_ether.h
@@ -166,7 +166,7 @@
 
 /* allow libcs like musl to deactivate this, glibc does not implement this. */
 #ifndef __UAPI_DEF_ETHHDR
-#define __UAPI_DEF_ETHHDR		1
+#define __UAPI_DEF_ETHHDR		0
 #endif
 
 #if __UAPI_DEF_ETHHDR
diff --git a/src/include/uapi/linux/libc-compat.h b/src/include/uapi/linux/libc-compat.h
index e25cd3f486..3bc1776e70 100644
--- a/src/include/uapi/linux/libc-compat.h
+++ b/src/include/uapi/linux/libc-compat.h
@@ -153,18 +153,22 @@
  * unsupported C libraries a way to opt out of any kernel definition. */
 #else /* !defined(__GLIBC__) */
 
+#ifndef NI_IDN
+#define NI_IDN 0
+#endif
+
 /* Definitions for if.h */
 #ifndef __UAPI_DEF_IF_IFCONF
-#define __UAPI_DEF_IF_IFCONF 1
+#define __UAPI_DEF_IF_IFCONF 0
 #endif
 #ifndef __UAPI_DEF_IF_IFMAP
-#define __UAPI_DEF_IF_IFMAP 1
+#define __UAPI_DEF_IF_IFMAP 0
 #endif
 #ifndef __UAPI_DEF_IF_IFNAMSIZ
 #define __UAPI_DEF_IF_IFNAMSIZ 1
 #endif
 #ifndef __UAPI_DEF_IF_IFREQ
-#define __UAPI_DEF_IF_IFREQ 1
+#define __UAPI_DEF_IF_IFREQ 0
 #endif
 /* Everything up to IFF_DYNAMIC, matches net/if.h until glibc 2.23 */
 #ifndef __UAPI_DEF_IF_NET_DEVICE_FLAGS
diff --git a/src/include/uapi/linux/netdevice.h b/src/include/uapi/linux/netdevice.h
index 86d961c911..97fce6fb17 100644
--- a/src/include/uapi/linux/netdevice.h
+++ b/src/include/uapi/linux/netdevice.h
@@ -31,7 +31,7 @@
 #include <linux/if_packet.h>
 #include <linux/if_link.h>
 
-
+#undef MAX_ADDR_LEN
 #define MAX_ADDR_LEN	32		/* Largest hardware address length */
 
 /* Initial net device group. All devices belong to group 0 by default. */
